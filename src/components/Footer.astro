---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-facebook', url: '#' },
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-pinterest', url: '#' },
  { icon: 'fab fa-twitter', url: '#' }
];
---

<footer class="bg-[#000033] text-white py-8">
  <div class="container mx-auto px-4 text-center">
    <p class="text-[#ff7f50] font-bold text-lg">PieCraft Pro</p>
    <p class="mt-2">&copy; {currentYear} PieCraft Pro. All rights reserved.</p>
    <div class="flex justify-center gap-4 mt-4">
      {socialLinks.map((link) => (
        <a href={link.url} class="text-white hover:text-[#ff7f50] transition-colors duration-300">
          <i class={link.icon}></i>
        </a>
      ))}
    </div>
  </div>
</footer>