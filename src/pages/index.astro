---
import Layout from '../layouts/Layout.astro';

const pageTitle = "PieCraft Pro - Master the Art of Artisanal Porky Pies";
const pageDescription = "Welcome to PieCraft Pro, where baking enthusiasts master the craft of creating delectable, artisanal porky pies. Explore premium tools, recipes, and tips in a contemporary design.";

const features = [
  {
    title: "Artisanal Excellence",
    description: "Learn authentic methods for flaky crusts and savory fillings using the finest ingredients.",
    icon: "fas fa-utensils"
  },
  {
    title: "Expert Guidance",
    description: "Step-by-step videos and tips from master bakers to perfect your skills.",
    icon: "fas fa-chalkboard-teacher"
  },
  {
    title: "Community Hub",
    description: "Join fellow pie lovers to share creations, recipes, and inspiration.",
    icon: "fas fa-users"
  }
];

const testimonials = [
  {
    name: "Sarah Johnson",
    role: "Master Baker",
    content: "PieCraft Pro transformed my baking technique. The precision guides are unmatched."
  },
  {
    name: "Michael Chen",
    role: "Pie Enthusiast",
    content: "Finally, a platform that understands the artistry behind porky pies. Truly inspiring!"
  },
  {
    name: "Emma Rodriguez",
    role: "Professional Chef",
    content: "The step-by-step tutorials saved me hours of trial and error. Essential resource!"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-r from-primary to-accent text-white py-24 md:py-32 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml;base64,')]"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
          PieCraft Pro
        </h1>
        <h2 class="text-2xl md:text-4xl font-bold mb-8 text-accent-foreground">
          Master the Art of Artisanal Porky Pies
        </h2>
        <p class="text-xl mb-10 max-w-2xl opacity-90">
          Welcome to PieCraft Pro, where baking enthusiasts master the craft of creating delectable, artisanal porky pies. Explore premium tools, recipes, and tips in a contemporary design.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <button class="bg-white text-primary hover:bg-gray-100 font-bold py-3 px-8 rounded-lg text-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
            Explore Recipes
          </button>
          <button class="border-2 border-white text-white hover:bg-white hover:text-primary font-bold py-3 px-8 rounded-lg text-lg transition-all duration-300">
            Join Community
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4">Why PieCraft Pro?</h2>
        <div class="w-24 h-1 bg-accent mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {features.map((feature, index) => (
          <div 
            key={index} 
            class="bg-gradient-to-br from-white to-gray-50 rounded-2xl p-8 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2"
          >
            <div class="w-16 h-16 rounded-full bg-accent flex items-center justify-center mb-6 text-white text-2xl">
              <i class={feature.icon}></i>
            </div>
            <h3 class="text-xl font-bold text-primary mb-3">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-16 md:py-24 bg-gradient-to-br from-gray-50 to-gray-100">
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row items-center gap-12">
        <div class="lg:w-1/2">
          <div class="relative">
            <div class="w-full h-96 bg-gradient-to-tr from-accent to-primary rounded-2xl shadow-xl"></div>
            <div class="absolute -bottom-6 -right-6 w-32 h-32 bg-accent rounded-2xl shadow-lg"></div>
          </div>
        </div>
        <div class="lg:w-1/2">
          <h2 class="text-3xl md:text-4xl font-bold text-primary mb-6">Welcome to PieCraft Pro</h2>
          <p class="text-lg text-gray-700 mb-6">
            Elevate your baking game with <strong>PieCraft Pro</strong>, the ultimate destination for pie enthusiasts. Our platform is designed to inspire and guide you through the world of handcrafted porky pies, blending traditional techniques with modern innovation.
          </p>
          <p class="text-lg text-gray-700 mb-8">
            Whether you're a novice baker or a seasoned pro, discover premium recipes, expert tutorials, and high-quality tools that make crafting perfect pies effortless and enjoyable.
          </p>
          <div class="flex flex-wrap gap-4">
            <span class="bg-primary text-white px-4 py-2 rounded-full text-sm font-medium">Premium Recipes</span>
            <span class="bg-accent text-white px-4 py-2 rounded-full text-sm font-medium">Expert Tips</span>
            <span class="bg-primary text-white px-4 py-2 rounded-full text-sm font-medium">Community Support</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-16 md:py-24 bg-primary text-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">What Our Bakers Say</h2>
        <div class="w-24 h-1 bg-accent mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((testimonial, index) => (
          <div 
            key={index} 
            class="bg-white bg-opacity-10 backdrop-blur-sm rounded-2xl p-8 border border-white border-opacity-20 hover:bg-opacity-20 transition-all duration-300"
          >
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 rounded-full bg-accent flex items-center justify-center mr-4">
                <i class="fas fa-user text-white"></i>
              </div>
              <div>
                <h4 class="font-bold text-lg">{testimonial.name}</h4>
                <p class="text-accent">{testimonial.role}</p>
              </div>
            </div>
            <p class="italic">"{testimonial.content}"</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-24 bg-gradient-to-r from-primary to-accent text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Master the Craft?</h2>
      <p class="text-xl max-w-2xl mx-auto mb-10 opacity-90">
        Join thousands of bakers who have elevated their pie-making skills with PieCraft Pro.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <button class="bg-white text-primary hover:bg-gray-100 font-bold py-4 px-10 rounded-lg text-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
          Start Your Journey
        </button>
        <button class="border-2 border-white text-white hover:bg-white hover:text-primary font-bold py-4 px-10 rounded-lg text-lg transition-all duration-300">
          View Courses
        </button>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }
  
  .floating {
    animation: float 6s ease-in-out infinite;
  }
  
  .bg-pattern {
    background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c0-3.866 3.134-7 7-7h54c3.866 0 7 3.134 7 7v54c0 3.866-3.134 7-7 7H18c-3.866 0-7-3.134-7-7V18z' fill='none' stroke='%23ff7f50' stroke-width='0.5'/%3E%3C/svg%3E");
  }
</style>